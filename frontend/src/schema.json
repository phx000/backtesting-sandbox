{
  "backtest": {
    "ticker": {
      "type": "str",
      "min_len": 1,
      "max_len": 6
    },
    "period": {
      "type": "str",
      "choices": {
        "hourly": {
          "name": "Hourly"
        },
        "daily": {
          "name": "Daily"
        },
        "weekly": {
          "name": "Weekly"
        }
      }
    },
    "strategies": {
      "type": "list",
      "items_type": "$_strategy",
      "min_len": 1,
      "max_len": 5
    }
  },
  "strategy": {
    "type": {
      "type": "int",
      "choices": {
        "buy": {
        },
        "sell": {
        }
      }
    },
    "units": {
      "type": "float",
      "min": 0.1,
      "max": 100000000
    },
    "take_profit": {
      "enabled": {
        "type": "bool",
        "default": false
      },
      "size": {
        "type": "float",
        "min": 0.1,
        "max": 1000000
      }
    },
    "stop_loss": {
      "enabled": {
        "type": "bool",
        "default": false
      },
      "size": {
        "type": "float",
        "min": 0.1,
        "max": 99.9
      }
    },
    "conditions": {
      "type": "list",
      "items_type": "$_condition",
      "min_len": 1,
      "max_len": 5
    }
  },
  "condition": {
    "operator": {
      "type": "str",
      "choices": {
        "cross_over": {
          "name": "Cross over"
        },
        "cross_below": {
          "name": "Cross below"
        }
      }
    },
    "fields": {
      "type": "list",
      "items_type": "$_field",
      "min_len": 2,
      "max_len": 2
    }
  },
  "field": {
    "type": {
      "type": "str",
      "choices": {
        "constant": {
          "type": "float",
          "min": 0,
          "max": 100000000
        },
        "data": {
          "type": "str",
          "choices": {
            "price": {
              "name": "Price"
            },
            "volume": {
              "name": "Volume"
            }
          }
        },
        "indicator": {
          "type": "$_indicator"
        }
      }
    }
  },
  "indicator": {
    "type": {
      "type": "str",
      "choices": {
        "sma": {
          "name": "SMA",
          "params": {
            "window": {
              "name": "Window",
              "type": "int",
              "min": 2,
              "max": 1000,
              "default": 14
            }
          }
        },
        "ema": {
          "name": "EMA",
          "params": {
            "window": {
              "name": "Window",
              "type": "int",
              "min": 2,
              "max": 1000,
              "default": 14
            }
          }
        }
      }
    }
  },
  "account": {
    "initial_capital": {
      "type": "float",
      "min": 100,
      "max": 10000000,
      "default": 10000
    }
  }
}